from turtle import *
n = int(textinput("Unos promjera", "Unesite duljinu promjera kru≈ænice: "))

if 0<n<300:
    pu()
    goto(-n/2, -n/2)
    pd()
    for i in range(4):
        fd(n)
        lt(90)
    fd(n/2)
    colormode('black')
    begin_fill()
    circle(n/2)
    end_fill()
    speed(1)
else:
    write("Uneseni broj nije u zadanim parametrima!")
done()
